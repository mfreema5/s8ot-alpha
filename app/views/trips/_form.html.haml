= form_for @trip do |f|
  - if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :opponent
    = f.text_field :opponent
  .field
    = f.label :fire_score
    = f.number_field :fire_score
  .field
    = f.label :opponent_score
    = f.text_field :opponent_score
  .actions
    = f.submit 'Save'
